<view class="page-body">
  <view class="page-section page-section-gap">
    <map
      id="myMap"
      style="width: 100%; height: 400px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      covers="{{covers}}" 
      scale = "{{scale}}" 
      polygons="{{polygons}}"
      show-location="true"
      bindpoitap="poitap"
    ></map>
  </view>
  <view class="hint">
  <text class="hint_content">点击地图上的POI点进行测试!</text>
  </view>
  <view class="btn-area">
    <button bindtap="initLocation" class="page-body-button" type="primary">位置重置</button>
    <button bindtap="currentLocation" class="page-body-button" type="primary">获取位置</button>    
  </view>
</view>
